#!/bin/sh

sxhkd -c /home/yuki/.config/sxhkd/sxhkdrc &
tint2 &
xscreensaver -no-splash &
compton --config /home/yuki/.config/compton/compton.conf -b
nitrogen --restore

bspc monitor -d 一 二 三 四 五 六 七 八 九 十

bspc config border_width          2
bspc config window_gap            16

bspc config normal_border_color   '#5f5f5f'
bspc config active_border_color   '#5f5f5f'
bspc config focused_border_color  '#afd7ff'

bspc config split_ratio           0.52
bspc config borderless_monocle    true
bspc config gapless_monocle       true
bspc config focus_follows_pointer true
