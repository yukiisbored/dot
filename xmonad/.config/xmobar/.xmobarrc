Config
  { font        = "xft:Fira Code:size=12"
  , border      = NoBorder
  , bgColor     = "#ffffff"
  , fgColor     = "#2a2a2a"
  , position    = Top
  , commands    =
      [ Run Cpu ["-t", "cpu: <fc=#aa0aff><bar> <total>%</fc>"] 10
      , Run Memory ["-t","mem: <fc=#aa0aff><usedbar> <usedratio>%</fc>"] 10
      , Run BatteryP ["BAT0"] ["-t", "bat: <fc=#aa0aff><leftbar> <left>%</fc>"] 600
      , Run Date "<fc=#aa0aff>%a, %d %b %H:%M</fc>" "date" 10
      , Run StdinReader
      ]
  , sepChar     = "%"
  , alignSep    = "}{"
  , template    = " %StdinReader% }{ %cpu% %memory% %battery%   %date% "
  }
