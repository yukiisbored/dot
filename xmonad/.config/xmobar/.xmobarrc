Config
  { font        = "xft:Ricty Diminished with Fira Code:size=12"
  , border      = NoBorder
  , bgColor     = "#000000"
  , fgColor     = "#aaaaaa"
  , alpha       = 200
  , position    = Top
  , commands    =
      [ Run Cpu ["-t", "cpu: <fc=#ffffff><bar> <total>%</fc>"] 10
      , Run Memory ["-t","mem: <fc=#ffffff><usedbar> <usedratio>%</fc>"] 10
      , Run BatteryP ["BAT0"] ["-t", "bat: <fc=#ffffff><leftbar> <left>%</fc>"] 600
      , Run Date "<fc=#ffffff>%a, %d %b %H:%M</fc>" "date" 10
      , Run StdinReader
      ]
  , sepChar     = "%"
  , alignSep    = "}{"
  , template    = " %StdinReader% }{ %cpu% %memory% %battery%   %date% "
  }
